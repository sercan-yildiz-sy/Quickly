<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Quickly.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:Quickly.Pages"
    Title="Quickly">

    <TabBar>
        <ShellContent
            x:Name="MainShellContent"
            ContentTemplate="{DataTemplate pages:MainPage}"
            Icon="main_page.png"
            Route="main" />
        <ShellContent
            x:Name="AddShellContent"
            ContentTemplate="{DataTemplate pages:ItemAddingPage}"
            Icon="add_page.png"
            Route="item_adding" />
        <ShellContent
            x:Name="ProfileShellContent"
            ContentTemplate="{DataTemplate pages:ProfilePage}"
            Icon="profile_page.png"
            Route="profile" />
    </TabBar>
</Shell>
