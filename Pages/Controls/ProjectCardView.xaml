<?xml version="1.0" encoding="utf-8" ?>
<Border
    x:Class="Quicky.Pages.Controls.ProjectCardView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:Quicky.Pages.Controls"
    xmlns:fonts="clr-namespace:Fonts"
    xmlns:models="clr-namespace:Quicky.Models"
    xmlns:pageModels="clr-namespace:Quicky.PageModels"
    xmlns:shimmer="clr-namespace:Syncfusion.Maui.Toolkit.Shimmer;assembly=Syncfusion.Maui.Toolkit"
    x:DataType="models:Project"
    Background="Transparent"
    Style="{StaticResource CardStyle}">
    <shimmer:SfShimmer
        BackgroundColor="Transparent"
        IsActive="{Binding IsBusy, Source={RelativeSource AncestorType={x:Type pageModels:MainPageModel}}, x:DataType=pageModels:IProjectTaskPageModel}"
        VerticalOptions="FillAndExpand">
        <shimmer:SfShimmer.CustomView>
            <VerticalStackLayout Spacing="15">
                <BoxView
                    CornerRadius="48"
                    HeightRequest="24"
                    HorizontalOptions="Start"
                    Style="{StaticResource ShimmerCustomViewStyle}"
                    VerticalOptions="Start"
                    WidthRequest="24" />
                <BoxView HeightRequest="24" Style="{StaticResource ShimmerCustomViewStyle}" />
                <BoxView HeightRequest="48" Style="{StaticResource ShimmerCustomViewStyle}" />
                <BoxView
                    Margin="0,12"
                    HeightRequest="24"
                    Style="{StaticResource ShimmerCustomViewStyle}" />
            </VerticalStackLayout>
        </shimmer:SfShimmer.CustomView>
        <shimmer:SfShimmer.Content>
            <Grid ColumnDefinitions="Auto,*">
                <Image
                    Grid.Column="0"
                    Aspect="Center"
                    HorizontalOptions="Start"
                    VerticalOptions="Center">
                    <Image.Source>
                        <FontImageSource
                            FontFamily="{x:Static fonts:FluentUI.FontFamily}"
                            Glyph="{Binding Icon}"
                            Size="{StaticResource IconSize}"
                            Color="{AppThemeBinding Light={StaticResource DarkOnLightBackground},
                                                    Dark={StaticResource LightOnDarkBackground}}" />
                    </Image.Source>
                </Image>
                <Grid
                    Grid.Column="1"
                    HorizontalOptions="End"
                    RowDefinitions="*, *, *,* ">

                    <Label
                        Grid.Row="0"
                        FontFamily="LibreBaskerville-Regular"
                        FontSize="12"
                        Text="{Binding Name}"
                        TextColor="{StaticResource Gray400}"
                        TextTransform="Uppercase"
                        VerticalOptions="Start" />

                    <BoxView
                        Grid.Row="1"
                        BackgroundColor="Transparent"
                        HeightRequest="5" />

                    <Label
                        Grid.Row="2"
                        Margin="0,3,0,0"
                        FontFamily="Roboto"
                        FontSize="8"
                        HorizontalOptions="Start"
                        Text="quantity"
                        TextColor="#838383"
                        VerticalOptions="End" />

                    <Label
                        Grid.Row="3"
                        FontFamily="Roboto"
                        FontSize="8"
                        LineBreakMode="WordWrap"
                        Text="{Binding Description}"
                        VerticalOptions="End" />
                </Grid>

            </Grid>

        </shimmer:SfShimmer.Content>
    </shimmer:SfShimmer>
</Border>