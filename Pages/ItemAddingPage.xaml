<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Quicky.Pages.ProjectListPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:Quicky.Pages.Controls"
    xmlns:fonts="clr-namespace:Fonts"
    xmlns:models="clr-namespace:Quicky.Models"
    xmlns:pageModels="clr-namespace:Quicky.PageModels"
    xmlns:pullToRefresh="clr-namespace:Syncfusion.Maui.Toolkit.PullToRefresh;assembly=Syncfusion.Maui.Toolkit"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:DataType="pageModels:ItemAddingPageModel"
    BackgroundColor="#F3F3F3">



    <Grid RowDefinitions="*, Auto">
        <StackLayout
            Padding="10"
            HorizontalOptions="Center"
            VerticalOptions="Start">
            <Border
                Grid.Row="0"
                Background="White"
                HeightRequest="32"
                Stroke="#18000000"
                StrokeShape="RoundRectangle 10"
                StrokeThickness="2"
                WidthRequest="180">
                <Grid>
                    <Entry
                        x:Name="entry"
                        Margin="5,0,0,0"
                        BackgroundColor="Transparent"
                        FontFamily="Roboto"
                        FontSize="10"
                        Placeholder="Search"
                        PlaceholderColor="#838383"
                        TextColor="#838383"
                        VerticalOptions="Center"
                        WidthRequest="150" />
                    <Image
                        Margin="0,0,10,0"
                        HeightRequest="10"
                        HorizontalOptions="End"
                        Source="search_icon.png"
                        VerticalOptions="Center"
                        WidthRequest="10"
                        ZIndex="1" />
                </Grid>
            </Border>
        </StackLayout>


        <CollectionView
            Grid.Row="1"
            HorizontalOptions="Fill"
            ItemsSource="{Binding Items}"
            VerticalScrollBarVisibility="Always">
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical" VerticalItemSpacing="30" />
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Item">
                    <Grid ColumnDefinitions="Auto,*">
                        <Image
                            Grid.Column="0"
                            Aspect="AspectFit"
                            HeightRequest="100"
                            HorizontalOptions="Start"
                            Source="{Binding Image}"
                            VerticalOptions="Center"
                            WidthRequest="100" />

                        <Grid
                            Grid.Column="1"
                            ColumnDefinitions="*, *"
                            RowDefinitions="*, Auto, *">
                            <Label
                                Grid.Row="0"
                                Grid.ColumnSpan="2"
                                FontFamily="LibreBaskerville-Regular"
                                FontSize="12"
                                HorizontalOptions="Start"
                                LineBreakMode="WordWrap"
                                LineHeight="0.8"
                                MaxLines="2"
                                Text="{Binding Name}"
                                TextColor="#000000"
                                VerticalOptions="Center" />
                            <Label
                                Grid.Row="1"
                                Grid.Column="0"
                                FontFamily="Roboto"
                                FontSize="8"
                                HorizontalOptions="Start"
                                Text="quantity"
                                TextColor="#838383"
                                VerticalOptions="End" />
                            <HorizontalStackLayout Grid.Row="2" Grid.ColumnSpan="2">
                                <Border
                                    BackgroundColor="White"
                                    HeightRequest="15"
                                    Stroke="#D9D9D9"
                                    StrokeShape="RoundRectangle 8"
                                    WidthRequest="25">
                                    <Label
                                        FontFamily="Roboto"
                                        FontSize="8"
                                        HorizontalOptions="Center"
                                        Text="{Binding Category}"
                                        TextColor="#838383"
                                        VerticalOptions="Center" />
                                </Border>
                                <Border
                                    BackgroundColor="White"
                                    HeightRequest="18"
                                    Stroke="#D9D9D9"
                                    StrokeShape="RoundRectangle 8"
                                    WidthRequest="35">
                                    <Label
                                        FontFamily="Roboto"
                                        FontSize="8"
                                        HorizontalOptions="Center"
                                        Text="{Binding Name}"
                                        TextColor="#838383"
                                        VerticalOptions="Center" />
                                </Border>
                            </HorizontalStackLayout>
                        </Grid>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
