<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Quicky.Pages.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:Quicky.Pages.Controls"
    xmlns:models="clr-namespace:Quicky.Models"
    xmlns:pageModels="clr-namespace:Quicky.PageModels"
    xmlns:pullToRefresh="clr-namespace:Syncfusion.Maui.Toolkit.PullToRefresh;assembly=Syncfusion.Maui.Toolkit"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:DataType="pageModels:MainPageModel"
    BackgroundColor="#F3F3F3"
    Shell.NavBarIsVisible="False">



    <ContentPage.ToolbarItems>
        <ToolbarItem Command="{Binding ToolbarItemCommand}" />
    </ContentPage.ToolbarItems>

    <ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior Command="{Binding NavigatedToCommand}" EventName="NavigatedTo" />
        <toolkit:EventToCommandBehavior Command="{Binding NavigatedFromCommand}" EventName="NavigatedFrom" />
        <toolkit:EventToCommandBehavior Command="{Binding AppearingCommand}" EventName="Appearing" />
    </ContentPage.Behaviors>

    <ContentPage.Resources>
        <ResourceDictionary>
            <toolkit:InvertedBoolConverter x:Key="InvertedBoolConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid>
        <pullToRefresh:SfPullToRefresh IsRefreshing="{Binding IsRefreshing}" RefreshCommand="{Binding RefreshCommand}">
            <pullToRefresh:SfPullToRefresh.PullableContent>

                <VerticalStackLayout Padding="{StaticResource LayoutPadding}" Spacing="{StaticResource LayoutSpacing}">

                    <Grid RowDefinitions="Auto, *, Auto">
                        <Button
                            BackgroundColor="#F3F3F3"
                            HorizontalOptions="StartAndExpand"
                            ImageSource="back_icon.png" />
                        <Grid>

                            <Image
                                Aspect="AspectFit"
                                HeightRequest="23.5"
                                HorizontalOptions="Center"
                                Source="background_logo.png"
                                VerticalOptions="Center" />

                            <Label
                                BackgroundColor="Transparent"
                                FontFamily="LibreBaskerville-Bold"
                                HorizontalOptions="CenterAndExpand"
                                HorizontalTextAlignment="Center"
                                LineBreakMode="WordWrap"
                                LineHeight="1.01"
                                Text="Quicky Inventory"
                                TextColor="#C0372F"
                                WidthRequest="90" />
                        </Grid>
                        <BoxView
                            Grid.Row="2"
                            BackgroundColor="Transparent"
                            HeightRequest="20" />
                    </Grid>

                    <Border
                        Background="#FFFFFF"
                        HeightRequest="40"
                        HorizontalOptions="Start"
                        Stroke="#18000000"
                        StrokeShape="RoundRectangle 12,12,12,12"
                        StrokeThickness="2"
                        VerticalOptions="Center"
                        WidthRequest="180">

                        <Picker
                            x:Name="picker"
                            Title="All Items"
                            Margin="15,5,0,0"
                            BackgroundColor="Transparent"
                            FontFamily="Roboto"
                            HeightRequest="40"
                            HorizontalOptions="FillAndExpand"
                            TextColor="#838383"
                            VerticalOptions="Center"
                            WidthRequest="180">
                            <Picker.Items>
                                <x:String>All Items</x:String>
                                <x:String>Produce</x:String>
                                <x:String>Meat</x:String>
                                <x:String>Dry Food</x:String>
                                <x:String>Canned Food</x:String>
                                <x:String>Others</x:String>
                            </Picker.Items>
                        </Picker>

                    </Border>

                    <BoxView
                        Grid.Row="2"
                        BackgroundColor="Transparent"
                        HeightRequest="10" />

                    <CollectionView HorizontalScrollBarVisibility="Never" ItemsSource="{Binding Projects} ">
                        <CollectionView.ItemsLayout>
                            <GridItemsLayout
                                HorizontalItemSpacing="15"
                                Orientation="Horizontal"
                                Span="2" />
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="models:Project">
                                <controls:ProjectCardView HeightRequest="80" WidthRequest="160">
                                    <controls:ProjectCardView.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding NavigateToProjectCommand, Source={RelativeSource AncestorType={x:Type pageModels:MainPageModel}}, x:DataType=pageModels:MainPageModel}" CommandParameter="{Binding .}" />
                                    </controls:ProjectCardView.GestureRecognizers>
                                </controls:ProjectCardView>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>


                    <Grid HeightRequest="44">
                        <Label
                            Text="Category"
                            FontFamily="LibreBaskerville-Regular"
                            FontSize="15"
                            TextColor="#000000"
                            HorizontalOptions="Center" />
                        <ImageButton
                            Aspect="Center"
                            Command="{Binding CleanTasksCommand}"
                            HeightRequest="44"
                            HorizontalOptions="End"
                            IsVisible="{Binding HasCompletedTasks}"
                            Source="{StaticResource IconClean}"
                            VerticalOptions="Center"
                            WidthRequest="44" />
                    </Grid>
                    <VerticalStackLayout BindableLayout.ItemsSource="{Binding Tasks}" Spacing="15">
                        <BindableLayout.ItemTemplate>
                            <DataTemplate>
                                <controls:TaskView TaskCompletedCommand="{Binding TaskCompletedCommand, Source={RelativeSource AncestorType={x:Type pageModels:MainPageModel}}, x:DataType=pageModels:MainPageModel}" />
                            </DataTemplate>
                        </BindableLayout.ItemTemplate>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </pullToRefresh:SfPullToRefresh.PullableContent>
        </pullToRefresh:SfPullToRefresh>

        <controls:AddButton Command="{Binding AddTaskCommand}" IsEnabled="{Binding IsBusy, Converter={StaticResource InvertedBoolConverter}}" />
    </Grid>
</ContentPage>
