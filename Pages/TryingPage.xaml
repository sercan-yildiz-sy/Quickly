<ContentPage
    x:Class="Quickly.Pages.TryingPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="clr-namespace:Quickly.Models"
    xmlns:pageModels="clr-namespace:Quickly.PageModels"
    Title="TryingPage"
    x:DataType="pageModels:TryingPageModel">

    <VerticalStackLayout>
        <CollectionView HorizontalScrollBarVisibility="Never" ItemsSource="{Binding Inventory}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Inventory">
                    <Border
                        BackgroundColor="Transparent"
                        HeightRequest="100"
                        Style="{StaticResource CardStyle}">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding GoToDetailsCommand, Source={RelativeSource AncestorType={x:Type pageModels:TryingPageModel}}, x:DataType=pageModels:TryingPageModel}" CommandParameter="{Binding .}" />
                        </Border.GestureRecognizers>
                        <Grid ColumnDefinitions="Auto,*">

                            <Image
                                Grid.Column="0"
                                Aspect="AspectFill"
                                HeightRequest="100"
                                HorizontalOptions="Start"
                                Scale="0.5"
                                Source="{Binding Image}"
                                VerticalOptions="Center"
                                WidthRequest="100" />

                            <Grid
                                Grid.Column="1"
                                ColumnDefinitions="*, *"
                                HorizontalOptions="FillAndExpand"
                                RowDefinitions="*, Auto, *">

                                <Label
                                    Grid.Row="0"
                                    Grid.ColumnSpan="2"
                                    FontFamily="LibreBaskerville-Regular"
                                    FontSize="12"
                                    HorizontalOptions="Start"
                                    LineBreakMode="WordWrap"
                                    LineHeight="0.8"
                                    MaxLines="2"
                                    Text="{Binding Name}"
                                    TextColor="#000000"
                                    VerticalOptions="Center" />

                                <Label
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    FontFamily="Roboto"
                                    FontSize="8"
                                    HorizontalOptions="Start"
                                    Text="quantity"
                                    TextColor="#838383"
                                    VerticalOptions="End" />

                                <HorizontalStackLayout Grid.Row="2" Grid.ColumnSpan="2">
                                    <Grid>
                                        <Border
                                            Background="#FFFFFF"
                                            HeightRequest="15"
                                            HorizontalOptions="StartAndExpand"
                                            Stroke="#D9D9D9"
                                            StrokeShape="RoundRectangle 8,8,8,8"
                                            StrokeThickness="1.2"
                                            VerticalOptions="FillAndExpand"
                                            WidthRequest="25" />
                                        <Label
                                            FontFamily="Roboto"
                                            FontSize="8"
                                            HorizontalOptions="Center"
                                            Text="{Binding Quantity}"
                                            TextColor="#838383"
                                            VerticalOptions="Center" />
                                    </Grid>

                                    <Grid>
                                        <Border
                                            Background="#FFFFFF"
                                            HeightRequest="18"
                                            HorizontalOptions="StartAndExpand"
                                            Stroke="#D9D9D9"
                                            StrokeShape="RoundRectangle 8,8,8,8"
                                            StrokeThickness="1.2"
                                            VerticalOptions="FillAndExpand"
                                            WidthRequest="35" />
                                        <Label
                                            FontFamily="Roboto"
                                            FontSize="8"
                                            HorizontalOptions="Center"
                                            Text="{Binding Quantity_Type}"
                                            TextColor="#838383"
                                            VerticalOptions="Center" />
                                    </Grid>
                                </HorizontalStackLayout>

                            </Grid>

                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>