<ContentPage
    x:Class="Quicky.Pages.TryingPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="clr-namespace:Quicky.Models"
    xmlns:pageModels="clr-namespace:Quicky.PageModels"
    Title="TryingPage"
    x:DataType="pageModels:TryingPageModel">

    <VerticalStackLayout>
        <Button Command="{Binding ShowItemsCommand}" Text="Show Items" />
        <CollectionView
            ItemsSource="{Binding Inventory}"
            SelectionChanged="CollectionView_SelectionChanged"
            SelectionMode="Single">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Inventory">
                    <Grid ColumnDefinitions="Auto, *">
                        <Image Source="{Binding Image}" Grid.Column="0" HeightRequest="30" WidthRequest="30"/>
                        <VerticalStackLayout Grid.Column="1" Padding="10">
                            <Label
                                FontAttributes="Bold"
                                FontSize="20"
                                Text="{Binding Name}" />
                            <Label
                                FontSize="16"
                                Text="{Binding Quantity}"
                                TextColor="Gray" />
                        </VerticalStackLayout>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>