<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Quicky.Pages.TryingPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="clr-namespace:Quicky.Models"
    xmlns:pageModels="clr-namespace:Quicky.PageModels"
    Title="TryingPage"
    x:DataType="pageModels:TryingPageModel">

    <VerticalStackLayout>

        <Button Command="{Binding GetItemCommand}"></Button>
        <CollectionView ItemsSource="{Binding Items}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Item">
                    <Grid ColumnDefinitions="Auto, *">
                        

                        <VerticalStackLayout Grid.Column="1" Padding="10">
                            <Label
                                FontAttributes="Bold"
                                FontSize="20"
                                Text="{Binding Name}" />
                            <Label
                                FontSize="16"
                                Text="{Binding Category}"  TextColor="Gray" />
                        </VerticalStackLayout>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>