<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Quicky.Pages.ProjectListPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:Quicky.Pages.Controls"
    xmlns:fonts="clr-namespace:Fonts"
    xmlns:models="clr-namespace:Quicky.Models"
    xmlns:pageModels="clr-namespace:Quicky.PageModels"
    xmlns:pullToRefresh="clr-namespace:Syncfusion.Maui.Toolkit.PullToRefresh;assembly=Syncfusion.Maui.Toolkit"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:DataType="pageModels:ProjectListPageModel">


    <ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior Command="{Binding AppearingCommand}" EventName="Appearing" />
    </ContentPage.Behaviors>

    <Grid>
        <Grid HorizontalOptions="Center" VerticalOptions="Start">
            <Border
                Background="#FFFFFF"
                HeightRequest="32"
                HorizontalOptions="Center"
                Stroke="#18000000"
                StrokeShape="RoundRectangle 10,10,10,10"
                StrokeThickness="1.2"
                VerticalOptions="Center"
                WidthRequest="180" />

            <Grid
                ColumnDefinitions="*, Auto"
                HorizontalOptions="Fill"
                VerticalOptions="Center">
                <Entry
                    x:Name="entry"
                    Grid.Column="0"
                    Margin="5,0,0,0"
                    BackgroundColor="Transparent"
                    FontFamily="Roboto"
                    FontSize="10"
                    HorizontalOptions="StartAndExpand"
                    Placeholder="Search"
                    PlaceholderColor="#838383"
                    TextColor="#838383"
                    VerticalOptions="Center"
                    WidthRequest="150" />

                <Image
                    Grid.Column="1"
                    Margin="0,0,10,0"
                    HeightRequest="10"
                    HorizontalOptions="End"
                    Source="search_icon.png"
                    VerticalOptions="Center"
                    WidthRequest="10" />
            </Grid>
        </Grid>

        <CollectionView VerticalScrollBarVisibility="Always" 
                        ItemsSource="{Binding Projects}" 
                        HorizontalOptions="Fill">
            <CollectionView.ItemsLayout>
                <GridItemsLayout
                    VerticalItemSpacing="30"
                    Orientation="Vertical"
                    
                     />
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Project">
                    <Grid ColumnDefinitions="Auto,*">
                        <Image
                            Grid.Column="0"
                            Aspect="Center"
                            HorizontalOptions="Start"
                            VerticalOptions="Center">
                            <Image.Source>
                                <FontImageSource
                                    FontFamily="{x:Static fonts:FluentUI.FontFamily}"
                                    Glyph="{Binding Icon}"
                                    Size="{StaticResource IconSize}"
                                    Color="{AppThemeBinding Light={StaticResource DarkOnLightBackground},
                                                            Dark={StaticResource LightOnDarkBackground}}" />
                            </Image.Source>
                        </Image>
                        <Grid
                            Grid.Column="1"
                            ColumnDefinitions="*, *"
                            HorizontalOptions="FillAndExpand"
                            RowDefinitions="*, Auto, *">

                            <Label
                                Grid.Row="0"
                                Grid.ColumnSpan="2"
                                FontFamily="LibreBaskerville-Regular"
                                FontSize="12"
                                HorizontalOptions="Start"
                                LineBreakMode="WordWrap"
                                LineHeight="0.8"
                                MaxLines="2"
                                Text="{Binding Name}"
                                TextColor="#000000"
                                VerticalOptions="Center" />

                            <Label
                                Grid.Row="1"
                                Grid.Column="0"
                                FontFamily="Roboto"
                                FontSize="8"
                                HorizontalOptions="Start"
                                Text="quantity"
                                TextColor="#838383"
                                VerticalOptions="End" />

                            <HorizontalStackLayout Grid.Row="2" Grid.ColumnSpan="2">
                                <Grid>
                                    <Border
                                        Background="#FFFFFF"
                                        HeightRequest="15"
                                        HorizontalOptions="StartAndExpand"
                                        Stroke="#D9D9D9"
                                        StrokeShape="RoundRectangle 8,8,8,8"
                                        StrokeThickness="1.2"
                                        VerticalOptions="FillAndExpand"
                                        WidthRequest="25" />
                                    <Label
                                        FontFamily="Roboto"
                                        FontSize="8"
                                        HorizontalOptions="Center"
                                        Text="{Binding ID}"
                                        TextColor="#838383"
                                        VerticalOptions="Center" />
                                </Grid>

                                <Grid>
                                    <Border
                                        Background="#FFFFFF"
                                        HeightRequest="18"
                                        HorizontalOptions="StartAndExpand"
                                        Stroke="#D9D9D9"
                                        StrokeShape="RoundRectangle 8,8,8,8"
                                        StrokeThickness="1.2"
                                        VerticalOptions="FillAndExpand"
                                        WidthRequest="35" />
                                    <Label
                                        FontFamily="Roboto"
                                        FontSize="8"
                                        HorizontalOptions="Center"
                                        Text="{Binding Name}"
                                        TextColor="#838383"
                                        VerticalOptions="Center" />
                                </Grid>
                            </HorizontalStackLayout>

                        </Grid>

                    </Grid>

                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!--<CollectionView HorizontalScrollBarVisibility="Never" ItemsSource="{Binding Projects}">
            <CollectionView.ItemsLayout>
                <GridItemsLayout
                    HorizontalItemSpacing="15"
                    Orientation="Horizontal"
                    Span="3" />
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Project">
                    <controls:ProjectCardView HeightRequest="100" WidthRequest="160">
                        <controls:ProjectCardView.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding NavigateToProjectCommand, Source={RelativeSource AncestorType={x:Type pageModels:ProjectListPageModel}}, x:DataType=pageModels:ProjectListPageModel}" CommandParameter="{Binding .}" />
                        </controls:ProjectCardView.GestureRecognizers>
                    </controls:ProjectCardView>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>-->

    </Grid>
</ContentPage>